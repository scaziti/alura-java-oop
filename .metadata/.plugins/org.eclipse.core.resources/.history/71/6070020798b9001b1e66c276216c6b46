
public class Fluxo {

	public static void main(String[] args) {
		System.out.println("Ini do main");
		try{
			metodo1();
		} catch (ArithmeticException ex) { //ex se torna a referência
			String excep = ex.getMessage();
			System.out.println("ArithmeticException" + excep);
//			ex.printStackTrace(); // me mostra a stack
		} catch (NullPointerException ex) {
			String excep = ex.getMessage();
			System.out.println("NullPointerException " + excep);
		}
		System.out.println("Fim do main");
	}

	private static void metodo1() {
		System.out.println("Ini do metodo1");
		metodo2();
		System.out.println("Fim do metodo1");
	}
	
	private static void metodo2() {
		System.out.println("Ini do metodo2");
		for (int i = 1; i <= 5; i++) {
			System.out.println(i);
			//int x = i / 0;
			Conta c = null;
			c.deposita();
		}
		System.out.println("Fim do metodo2");
	}

}
