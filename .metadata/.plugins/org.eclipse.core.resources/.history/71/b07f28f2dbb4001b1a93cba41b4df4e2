package raphael.banco;

public class Conta {
	
	double saldo;
	int agencia;
	int numero;
	Cliente titular;
	
	public void saca(double valor) {
		if (valor > 0) {
			if (this.saldo > valor) {
				this.saldo -= valor;
			}
			else {
				System.out.println("Não realizado");
			}
		}
		else {
			System.out.println("Não realizado");
		}
		
	}
	
	public void deposita(double valor) {
		if (valor > 0) {
			this.saldo += valor;
		}
		else {
			System.out.println("Não realizado");
		}
	}
	
	public void transferePara(double valor, Conta conta) {
		if (conta != null) {
			if (this.saldo > valor) {
				this.saca(valor);
				conta.deposita(valor);
			}
		}
		else {
			System.out.println("Não realizado");
		}
	}
	
	public String toString() {
		StringBuilder builder = new StringBuilder();
		builder.append(this.titular.toString());
		builder.append("\nAgência: " + this.agencia);
		builder.append("\nNúmero: " + this.numero);
		builder.append("\nSaldo: R$ " + String.format("%.2f", this.saldo));
		
		return builder.toString();
	}
}
