package gothanbank;

public class Conta{
	
	//Attributes 
	private double saldo;
	int agencia;
	int numero;
	Cliente titular;
	
	//Methods
	public void deposita(double valor){
		this.saldo += valor;
	}
	
	public boolean saca(double valor) {
		if (this.saldo >= valor && valor > 0) {
			this.saldo -= valor;
			return true;
		}
		
		return false;
	}
	
	public boolean transferePara(Conta destino, double valor) {
		if (this.saldo >= valor) {
			this.saca(valor);
			destino.deposita(valor);
			return true;
		}
		
		return false;
	}
	
	public double getSaldo() {
		return this.saldo + 1000.0;
	}
}